$aside-spacing = 86px;
$block-x-padding = 48px;
$block-y-padding = 48px;
$video-y-padding = 74;
$text-y-margin = 28px;
$main-column-maxw = 1024px;
$main-column-minw = 760px;
$maxwidth-coef = unit($main-column-maxw, '') / 100;

$fs-s-size = 13px;
$fs-base = 16px;
$fs-m-size = 18px;
$fs-l-size = 20px;
$fs-xl-size = 24px;

$font-color = #ededed;
$color-yellow = #c9d08f
$color-bg = #1A1E25

html,
body {
	padding: 0;
	margin: 0;
	font-size: $fs-base;
	min-height: 100%;
	font: normal $fs-base/1.45 'Gill Sans', Tahoma, Verdana, sans-serif;
	background: $color-bg url("../img/Back.png") repeat;
	background-size: contain;
	color: $font-color;
}

.wrapper {
	min-width $main-column-minw;
	}

.header,
.content_wrapper,
.video_player {
	max-width: $main-column-maxw;
	min-width: $main-column-minw;
	margin: auto;
	}
	.header:before {
		content '';
		display block;
		padding-bottom: (799/$maxwidth-coef)%
		background: transparent url("../img/Head-jpg.jpg") no-repeat;
		background-size: 100%;
		}

.content_wrapper,
.video_player {
	padding-left: $aside-spacing;
	padding-right: @padding-left;
	box-sizing border-box;
}

.content,
.footer {
	width: 100%
}


.content,
.video_player {
	box-sizing: border-box;
}

.content {
	position: relative;
	z-index 0;
	margin-top: $text-y-margin;
	margin-bottom: @margin-top;
	padding: $block-y-padding $block-x-padding;
	background-color: rgba(18, 20, 25, 0.53);
	}

/* Video */
.video {
	position: relative;
	text-align: center;
	background-color: #000;
	}
	.video-decor-foot {
		position: absolute;
		top: 100%;
		width: 100%;
		text-align center;
		}
		.video-decor-foot:after {
			content '';
			display: inline-block;
			width: 100%;
			max-width: $main-column-maxw;
			min-width: $main-column-minw;
			padding-bottom: (152/10.24)%;

			background: transparent url(../img/Back-after-video.png) no-repeat;
			background-position: 50% 0;
			background-size: contain;
			}

.video_player {
	padding-top: ($video-y-padding/$maxwidth-coef)%;
	padding-bottom: @padding-top;
	}

	.video_player_obj {
		width: 100%;
		padding-left: $block-x-padding;
		padding-right: @padding-left;
		box-sizing border-box;
		outline-color: transparent;
		}

/* /Video */
.description {
	margin: $text-y-margin 0;
	text-align: center;
	//text-align: justify;
	}
	.description.__emphased {
		text-align center;
		}
	.description:first-child {
		margin-top: 0;
		}
	.description:last-child {
		margin-bottom: 0;
		}

.description_head {
	text-align center;
	margin: $text-y-margin 0 4px;
}

.description_text {}

.content_poster {
	margin-left: -($block-x-padding);
	margin-right: -($block-x-padding);
	background-image: url("../img/asset3.jpg");
	background-size: contain;
	background-repeat: no-repeat;
}

.content_poster_img {
	width: 100%;
	visibility: hidden;
	display: block;
}

.timetable_header {
	font-size: $fs-base;
	margin-top: 0;
}

.timetable_list {
	list-style: none;
	padding: 0;
	margin: 0;
}

.timetable_list_i {
	display: flex;
	margin: auto;
	width: 60%;
	max-width: 65%;
}

.timetable_list_i_txt {
	width: 33.3%;
	margin: 4px 0;
	flex-grow: 1;
	flex-shrink: 0;
}

.timetable_list_i_txt.__time {
	text-align: right;
}

.timetable_list_i_txt.__divider {
	text-align: center;
	flex: 0 0 30%;
	}

.timetable_list_i_txt.__description {
	text-align: left;
	min-width: 0;
	flex-basis: 50%;
}

/* Content footer
---------------------------------------------------------------------------------- */
.footer_logo {
	display: block;
	margin: auto;
}

.footer_text {
	font-size: 0;
	margin: $text-y-margin 0 2 *$text-y-margin;
	font-family: "Arial Rounded MT Bold", "Comic Sans MS", sans-serif;
	}

	.footer_text_contacts {
		display: inline-block;
		vertical-align: top;
		width: 50%;
		padding: 0 24px;
		box-sizing: border-box;
		font-size: $fs-xl-size;
		text-align center;
		}

/* /Content footer
---------------------------------------------------------------------------------- */
.-g-colorize {
	color: $color-yellow;
}

.-g-uppercase {
	text-transform: uppercase;
}

.-g-bold {
	font-weight: bold;
}

.-g-spread-text {
	line-height: 32px;
}

.-g-fsize-q05 {
	font-size: 1.125em;
}

.-g-fsize-q1 {
	font-size: 1.25em;
}

.-g-fsize-q2 {
	font-size: 1.5em;
}

.-g-fsize-q3 {
	font-size: 1.75em;
}

.-g-fsize-q4 {
	font-size: 2em;
}

#root .aria-hidden {
	position: absolute !important;
	height: 1px;
	width: 1px;
	overflow: hidden;
	clip: rect(1px, 1px, 1px, 1px);
}
